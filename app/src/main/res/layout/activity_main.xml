<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

    <ImageView
        android:id="@+id/login_backgrounnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728"
        app:srcCompat="@drawable/rectangle_2" />

    <ImageView
        android:id="@+id/logoies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logoies" />

    <ImageView
        android:id="@+id/roundwhite"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_marginStart="313dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintVertical_bias="0.538"
        app:srcCompat="@drawable/white" />

    <ImageView
        android:id="@+id/roundblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/roundwhite"
        app:layout_constraintEnd_toEndOf="@+id/roundwhite"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toTopOf="@+id/roundwhite"
        app:layout_constraintVertical_bias="0.502"
        app:srcCompat="@drawable/blue" />


    <ImageView
        android:id="@+id/Login"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundwhite"
        app:layout_constraintEnd_toEndOf="@+id/roundblue"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="@+id/roundwhite"
        app:layout_constraintTop_toTopOf="@+id/roundwhite"
        app:layout_constraintVertical_bias="0.522"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="268dp"
        android:layout_height="51dp"
        android:background="@drawable/input"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_computer_24"
        android:ems="10"
        android:fontFamily="@font/varela_round"
        android:hint="@string/computer_code"
        android:inputType="none|number"
        android:textColor="#000000"
        android:textColorHint="#707070"
        app:layout_constraintBottom_toTopOf="@+id/inputpass"
        app:layout_constraintEnd_toEndOf="@+id/login_backgrounnd"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintVertical_bias="0.447"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/inputpass"
        android:layout_width="268dp"
        android:layout_height="51dp"
        android:background="@drawable/input"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:fontFamily="@font/varela_round"
        android:hint="@string/password"
        android:drawablePadding="5dp"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#707070"
        app:layout_constraintBottom_toBottomOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="@+id/login_backgrounnd"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintVertical_bias="0.819"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/computercode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela_round"
        android:text="@string/computer_code"
        android:textColor="#22367F"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toStartOf="@+id/roundblue"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="#22367F"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toStartOf="@+id/roundwhite"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toTopOf="@+id/computercode"
        app:layout_constraintVertical_bias="0.58"
        tools:text="Password" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />


</androidx.constraintlayout.widget.ConstraintLayout>