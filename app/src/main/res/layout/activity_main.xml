<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/login_backgrounnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728"
        app:srcCompat="@drawable/rectangle_2" />

    <ImageView
        android:id="@+id/logoies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logoies" />


    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela_round"
        android:text="Welcome!"
        android:textAlignment="center"
        android:textColor="#22367F"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="@+id/login_backgrounnd"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toTopOf="@+id/login_backgrounnd"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/StudentButton"
        android:layout_width="103dp"
        android:layout_height="55dp"
        android:background="@drawable/input"
        android:fontFamily="@font/varela_round"
        android:text="Student"
        android:textColor="#22367F"
        app:layout_constraintBottom_toBottomOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="@+id/login_backgrounnd"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"
        app:layout_constraintVertical_bias="0.416" />

    <Button
        android:id="@+id/FaulctyButton"
        android:layout_width="103dp"
        android:layout_height="55dp"
        android:background="@drawable/input"
        android:fontFamily="@font/varela_round"
        android:text="Faculty"
        android:textColor="#22367F"
        app:layout_constraintBottom_toBottomOf="@+id/login_backgrounnd"
        app:layout_constraintEnd_toEndOf="@+id/login_backgrounnd"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="@+id/login_backgrounnd"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"
        app:layout_constraintVertical_bias="0.424" />


</androidx.constraintlayout.widget.ConstraintLayout>